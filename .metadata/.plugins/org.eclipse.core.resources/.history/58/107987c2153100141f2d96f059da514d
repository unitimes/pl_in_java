package chessgame;

import java.util.ArrayList;

import core.Coordinate;
import chessgame.piece.Piece;

public class Node {
	Piece piece;
	
	public Node(Piece piece) {
		this.piece = piece;
	}
	
	Boolean isPlaced() {
		if(piece == null) {
			return false;
		}
		return true;
	}
	
	ArrayList<Coordinate> searchMovibleGrids(int row, int col, Board presentBoard) {
		ArrayList<Coordinate> movibleGrids;
		movibleGrids = piece.searchMovibleNodes(row, col, presentBoard);
		return movibleGrids;
	}

	void setNode(Piece piece) {
		this.piece = piece;
	}
}
