package chessgame;

import chessgame.enums.Constant;
import chessgame.enums.Side;
import chessgame.piece.Bishop;
import chessgame.piece.King;
import chessgame.piece.Knight;
import chessgame.piece.Pawn;
import chessgame.piece.Piece;
import chessgame.piece.Queen;
import chessgame.piece.Rook;

public class BoardCreator {
	private Piece[][] grids;
	
	public BoardCreator() {
		grids = new Piece[Constant.MAX_ROW.getNumber()][Constant.MAX_ROW.getNumber()];
	}
	
	private void initBoard() {
		initWhiteSide();
		setFirstRank(7, Side.BLACK);
	}
	
	private void initWhiteSide() {
		setFirstRank(0, Side.WHITE);
		setSecondRank(1, Side.WHITE);
	}
	
	private void initBlackSide() {
		setFirstRank(7, Side.BLACK);
		setSecondRank(6, Side.BLACK);
	}
	
	private void setFirstRank(int rankNumber, Side side) {
		grids[rankNumber][0] = new Rook(side);
		grids[rankNumber][1] = new Knight(side);
		grids[rankNumber][2] = new Bishop(side);
		grids[rankNumber][3] = new Queen(side);
		grids[rankNumber][4] = new King(side);
		grids[rankNumber][5] = new Bishop(side);
		grids[rankNumber][6] = new Knight(side);
		grids[rankNumber][7] = new Rook(side);	
	}
	
	private void setSecondRank(int rankNumber, Side side) {
		for (int i = 0; i < 8; i++) {
			grids[rankNumber][i] = new Pawn(side);
		}
	}
}
